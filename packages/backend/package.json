{
  "name": "@ai-pms-kms/backend",
  "version": "1.0.0",
  "private": true,
  "description": "AI-Enhanced Project & Knowledge Management System - Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/integration/**/*.test.ts'",
    "lint": "eslint . --ext .ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "type-check": "tsc --noEmit",
    "db:migrate": "ts-node scripts/migrate.ts",
    "db:seed": "ts-node scripts/seed.ts",
    "db:reset": "ts-node scripts/reset.ts",
    "generate:openapi": "ts-node scripts/generate-openapi.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^6.0.1",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "pg": "^8.8.0",
    "redis": "^4.5.1",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "zod": "^3.20.2",
    "winston": "^3.8.2",
    "dotenv": "^16.0.3",
    "uuid": "^9.0.0",
    "rate-limiter-flexible": "^2.4.1",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.14.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.0",
    "node-cron": "^3.0.2",
    "bull": "^4.10.2",
    "ioredis": "^5.2.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.3",
    "@types/compression": "^1.7.2",
    "@types/pg": "^8.6.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/uuid": "^9.0.0",
    "@types/node": "^18.11.18",
    "@types/jest": "^29.2.5",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/node-cron": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4",
    "ts-node": "^10.9.1",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.1",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "supertest": "^6.3.3",
    "@types/bull": "^4.10.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/src/**/*.test.ts", "**/tests/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
} 